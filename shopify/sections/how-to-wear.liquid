{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

{% assign data = shop.metaobjects['how_to_wear']['how-to-wear'] %}

{% if data %}
  <div class="section-{{ section.id }}-padding" id="how-to-wear">
    <div class="page-width">
      <div class=" tw-bg-primary-500 tw-p-8 lg:tw-p-16 lg:tw-grid lg:tw-grid-cols-2 lg:tw-gap-x-16">
        <div class="tw-flex tw-flex-col lg:tw-justify-between">
          {% if data.eyebrow %}
            <p class="tw-text-white tw-flex tw-items-center tw-uppercase tw-font-bold tw-text-text-sm">{% render 'icon-line' %}
              <span class="tw-pl-6">{{ data.eyebrow }}</span>
            </p>
          {% endif %}

          <div class="splide splide-how-to-wear-text tw-mt-9 tw-mb-4 lg:tw-my-auto">

            <div class="splide__track">
              <ul class="splide__list">
                {% for option in data.options.value %}
                  <li class="splide__slide transition-height">
                    <span class="tw-text-display-sm tw-uppercase tw-font-heading tw-leading-none tw-text-secondary-800 tw-block tw-mb-6 lg:tw-mb-9">{{ option.title }}</span>
                    <span class="tw-text-white tw-block">{{ option.description }}</span>
                  </li>
                {% endfor %}
              </ul>
            </div>
          </div>

        </div>
        <div class="splide splide-how-to-wear">

          <div class="splide__track">
            <ul class="splide__list">
              {% for option in data.options.value %}
                <li class="splide__slide tw-group">
                  {{ option.image | image_url: width: 530 | image_tag: class: 'tw-w-full tw-h-auto tw-opacity-50 group-[.is\-active]:tw-opacity-100' }}
                </li>
              {% endfor %}
            </ul>
          </div>
          <ul class="splide__pagination with-numbers"></ul>
        </div>
      </div>

    </div>

  </div>
{% else %}
  <p>
    Missing reference to How To Wear</p>
{% endif %}

{% schema %}
  {
    "name": "How to wear",
    "tag": "section",
    "class": "section",
    "disabled_on": {
      "groups": ["header", "footer"]
    },
    "settings": [
      {
        "type": "inline_richtext",
        "id": "title",
        "default": "t:sections.collection-list.settings.title.default",
        "label": "t:sections.collection-list.settings.title.label"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 104,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 36
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 104,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 36
      }
    ],
    "presets": [
      {
        "name": "How to wear"
      }
    ]
  }
{% endschema %}