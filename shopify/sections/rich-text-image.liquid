{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}


<div class="section-{{ section.id }}-padding">
  <div class="page-width tw-grid lg:tw-grid-cols-2 tw-gap-y-5 lg:tw-gap-x-5">
    <div class="tw-space-y-3 [&>h2]:tw-text-text-lg [&>h2]:!tw-font-body [&>h2]:tw-text-300">
      {{ section.settings.description }}
    </div>
    {% if section.settings.image %}
      {{ section.settings.image | image_url: height: section.settings.image.width | image_tag: class: '' }}
    {% endif %}
  </div>
</div>

{% schema %}
  {
    "name": "Rich Text Image",
    "tag": "section",
    "class": "section",
    "disabled_on": {
      "groups": ["header", "footer"]
    },
    "settings": [
      {
        "type": "richtext",
        "id": "description",
        "label": "Description"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 104,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 36
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 104,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 36
      }
    ],
    "presets": [
      {
        "name": "Rich Text Image"
      }
    ]
  }
{% endschema %}